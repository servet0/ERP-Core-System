// ─────────────────────────────────────────────────────────────────
// ERP-Core-System — Prisma Schema (Phase 7A: Multi-Tenant Inventory)
// ─────────────────────────────────────────────────────────────────
// Changelog:
//   Phase 1-4: User, Product, StockMovement, Order, Invoice
//   Phase 5:   AuditLog, soft-delete (deletedAt)
//   Phase 6:   OutboxEvent
//   Phase 7A:  Organization (multi-tenant), Category, Warehouse,
//              Stock (product×warehouse), redesigned enums
// ─────────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ═══════════════════════════════════════════════════════════════════
//  MULTI-TENANT ROOT
// ═══════════════════════════════════════════════════════════════════

model Organization {
  id        String   @id @default(cuid())
  name      String
  taxId     String?  @unique @map("tax_id")        // Vergi No — gerçek dünya unique tanımlayıcı
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // İlişkiler — her iş verisi org'a bağlı
  users          User[]
  categories     Category[]
  products       Product[]
  warehouses     Warehouse[]
  stocks         Stock[]
  stockMovements StockMovement[]

  @@map("organizations")
}

// ═══════════════════════════════════════════════════════════════════
//  KULLANICI & ROL
// ═══════════════════════════════════════════════════════════════════

enum Role {
  ADMIN
  SALES
  WAREHOUSE
  VIEWER
}

model User {
  id             String    @id @default(cuid())
  organizationId String?   @map("organization_id")  // null = sistem admin
  email          String    @unique
  name           String
  passwordHash   String    @map("password_hash")
  role           Role      @default(VIEWER)
  active         Boolean   @default(true)
  deletedAt      DateTime? @map("deleted_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // İlişkiler
  organization   Organization? @relation(fields: [organizationId], references: [id])
  orders         Order[]
  stockMovements StockMovement[]
  invoices       Invoice[]
  auditLogs      AuditLog[]

  @@index([organizationId])
  @@index([deletedAt])
  @@map("users")
}

// ═══════════════════════════════════════════════════════════════════
//  KATEGORİ (Hiyerarşik, org-scoped)
// ═══════════════════════════════════════════════════════════════════
// Self-referencing parent/children → sınırsız derinlik
// Örnek: Elektronik → Telefonlar → Akıllı Telefonlar

model Category {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  parentId       String?  @map("parent_id")         // null = kök kategori
  name           String
  slug           String                              // URL-safe tanımlayıcı
  sortOrder      Int      @default(0) @map("sort_order")
  active         Boolean  @default(true)
  createdAt      DateTime @default(now()) @map("created_at")

  // İlişkiler
  organization Organization @relation(fields: [organizationId], references: [id])
  parent       Category?    @relation("CategoryTree", fields: [parentId], references: [id])
  children     Category[]   @relation("CategoryTree")
  products     Product[]

  @@unique([organizationId, slug])              // slug org içinde unique
  @@index([organizationId, parentId])           // hızlı ağaç traversal
  @@map("categories")
}

// ═══════════════════════════════════════════════════════════════════
//  ÜRÜN (Org-scoped, kategorili)
// ═══════════════════════════════════════════════════════════════════
// currentStock KALDIRILDI — Stock modeline taşındı (multi-warehouse).
// Toplam stok = SUM(stocks.quantity WHERE productId = X)

model Product {
  id             String    @id @default(cuid())
  organizationId String    @map("organization_id")
  categoryId     String?   @map("category_id")
  sku            String
  name           String
  description    String?
  unit           String    @default("ADET")          // ADET, KG, LT, METRE
  price          Decimal   @default(0) @db.Decimal(12, 2)
  active         Boolean   @default(true)
  deletedAt      DateTime? @map("deleted_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // İlişkiler
  organization   Organization   @relation(fields: [organizationId], references: [id])
  category       Category?      @relation(fields: [categoryId], references: [id])
  stocks         Stock[]
  stockMovements StockMovement[]
  orderItems     OrderItem[]

  @@unique([organizationId, sku])               // SKU org içinde unique, global değil
  @@index([organizationId, name])               // org-scoped ürün arama
  @@index([categoryId])                         // kategori filtreleme
  @@index([deletedAt])                          // soft-delete filtre
  @@map("products")
}

// ═══════════════════════════════════════════════════════════════════
//  DEPO (Org-scoped)
// ═══════════════════════════════════════════════════════════════════

model Warehouse {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  code           String                              // "WH-01", "MERKEZ"
  name           String
  address        String?
  active         Boolean  @default(true)
  createdAt      DateTime @default(now()) @map("created_at")

  // İlişkiler
  organization   Organization   @relation(fields: [organizationId], references: [id])
  stocks         Stock[]
  stockMovements StockMovement[]

  @@unique([organizationId, code])              // depo kodu org içinde unique
  @@map("warehouses")
}

// ═══════════════════════════════════════════════════════════════════
//  STOK SEVİYESİ (Denormalize — product × warehouse)
// ═══════════════════════════════════════════════════════════════════
// Her (product, warehouse) çifti için TAM BİR kayıt.
// quantity: güncel stok miktarı (StockMovement'larla senkron tutulur)

model Stock {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  productId      String   @map("product_id")
  warehouseId    String   @map("warehouse_id")
  quantity       Int      @default(0)                // mevcut stok
  minQuantity    Int      @default(0) @map("min_quantity")  // minimum stok uyarı eşiği
  updatedAt      DateTime @updatedAt @map("updated_at")

  // İlişkiler
  organization Organization @relation(fields: [organizationId], references: [id])
  product      Product      @relation(fields: [productId], references: [id])
  warehouse    Warehouse    @relation(fields: [warehouseId], references: [id])

  @@unique([productId, warehouseId])            // bir ürün-depo çifti = bir stok kaydı
  @@index([organizationId])                     // org bazlı stok sorguları
  @@index([warehouseId])                        // depo bazlı filtre
  @@map("stocks")
}

// ═══════════════════════════════════════════════════════════════════
//  STOK HAREKETLERİ (Redesigned Enums)
// ═══════════════════════════════════════════════════════════════════
// StockMovementType: Hareketin YÖNÜ (IN/OUT/ADJUSTMENT)
// StockReferenceType: Hareketin NEDENİ (SALE/PURCHASE/MANUAL)

enum StockMovementType {
  IN                // Stok girişi
  OUT               // Stok çıkışı
  ADJUSTMENT        // Sayım düzeltmesi (+ veya -)
}

enum StockReferenceType {
  SALE              // Satış kaynaklı
  PURCHASE          // Satın alma kaynaklı
  MANUAL            // Manuel işlem
}

model StockMovement {
  id             String             @id @default(cuid())
  organizationId String             @map("organization_id")
  productId      String             @map("product_id")
  warehouseId    String             @map("warehouse_id")
  type           StockMovementType
  referenceType  StockReferenceType @default(MANUAL) @map("reference_type")
  quantity       Int                                  // pozitif; yön type'dan anlaşılır
  reference      String?                              // sipariş no, satın alma no vb.
  note           String?
  createdById    String             @map("created_by_id")
  createdAt      DateTime           @default(now()) @map("created_at")

  // İlişkiler
  organization Organization @relation(fields: [organizationId], references: [id])
  product      Product      @relation(fields: [productId], references: [id])
  warehouse    Warehouse    @relation(fields: [warehouseId], references: [id])
  createdBy    User         @relation(fields: [createdById], references: [id])

  @@index([organizationId, createdAt])          // org-scoped hareket geçmişi
  @@index([productId, createdAt])               // ürün bazlı hareket
  @@index([warehouseId])                        // depo bazlı filtre
  @@index([type])                               // tür bazlı filtre
  @@map("stock_movements")
}

// ═══════════════════════════════════════════════════════════════════
//  SİPARİŞ
// ═══════════════════════════════════════════════════════════════════
// Durum Makinesi: DRAFT → APPROVED → (CANCELLED)

enum OrderStatus {
  DRAFT
  APPROVED
  CANCELLED
}

model Order {
  id           String      @id @default(cuid())
  orderNumber  String      @unique @map("order_number")
  status       OrderStatus @default(DRAFT)
  customerName String      @map("customer_name")
  totalAmount  Decimal     @default(0) @db.Decimal(12, 2) @map("total_amount")
  note         String?
  createdById  String      @map("created_by_id")
  approvedAt   DateTime?   @map("approved_at")
  cancelledAt  DateTime?   @map("cancelled_at")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")

  // İlişkiler
  items     OrderItem[]
  invoices  Invoice[]
  createdBy User        @relation(fields: [createdById], references: [id])

  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String  @map("order_id")
  productId String  @map("product_id")
  quantity  Int
  unitPrice Decimal @db.Decimal(12, 2) @map("unit_price")
  total     Decimal @db.Decimal(12, 2)

  // İlişkiler
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

// ═══════════════════════════════════════════════════════════════════
//  FATURA (Immutable)
// ═══════════════════════════════════════════════════════════════════

model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber String   @unique @map("invoice_number")
  orderId       String   @map("order_id")
  totalAmount   Decimal  @db.Decimal(12, 2) @map("total_amount")
  createdById   String   @map("created_by_id")
  createdAt     DateTime @default(now()) @map("created_at")

  // İlişkiler
  order     Order @relation(fields: [orderId], references: [id])
  createdBy User  @relation(fields: [createdById], references: [id])

  @@index([orderId])
  @@map("invoices")
}

// ═══════════════════════════════════════════════════════════════════
//  AUDIT LOG (Append-only)
// ═══════════════════════════════════════════════════════════════════

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?  @map("user_id")
  action    String
  entity    String
  entityId  String?  @map("entity_id")
  metadata  Json?
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  duration  Int?
  status    String   @default("SUCCESS")
  error     String?
  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([entity, entityId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

// ═══════════════════════════════════════════════════════════════════
//  OUTBOX EVENTS (Transactional Outbox Pattern)
// ═══════════════════════════════════════════════════════════════════

model OutboxEvent {
  id             String    @id @default(cuid())
  type           String
  payload        Json
  status         String    @default("PENDING")
  retryCount     Int       @default(0) @map("retry_count")
  maxRetries     Int       @default(3) @map("max_retries")
  error          String?
  idempotencyKey String?   @unique @map("idempotency_key")
  createdAt      DateTime  @default(now()) @map("created_at")
  processedAt    DateTime? @map("processed_at")

  @@index([status, createdAt])
  @@index([type])
  @@map("outbox_events")
}
